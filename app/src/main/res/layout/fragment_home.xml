<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/uber_grey"
    tools:context=".ui.home.HomeFragment">

    <!-- Demo Header -->
    <TextView
        android:id="@+id/tvDemoMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸš— MODO DEMO - Sin backend conectado"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:background="@color/uber_green"
        android:padding="12dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Map Placeholder -->
    <View
        android:id="@+id/mapPlaceholder"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#E0E0E0"
        app:layout_constraintTop_toBottomOf="@id/tvDemoMode"
        app:layout_constraintBottom_toTopOf="@id/searchCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ“ Mapa\n(Requiere Google Maps API)"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/mapPlaceholder"
        app:layout_constraintBottom_toBottomOf="@id/mapPlaceholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Search/Action Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/searchCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toTopOf="@id/btnRequest"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvWhereTo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/where_to"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:drawablePadding="16dp"/>

    </androidx.cardview.widget.CardView>

    <!-- Request Button -->
    <Button
        android:id="@+id/btnRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/request_ride"
        android:layout_margin="16dp"
        android:backgroundTint="@color/uber_black"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
