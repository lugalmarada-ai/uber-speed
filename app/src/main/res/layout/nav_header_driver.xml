<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:orientation="vertical"
    android:gravity="bottom"
    android:padding="16dp"
    android:background="#1A1A1A">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivDriverAvatar"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_driver_avatar"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/tvDriverName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Conductor"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:gravity="center" />

    <TextView
        android:id="@+id/tvDriverEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="conductor@uberspeed.com"
        android:textSize="14sp"
        android:textColor="#AAAAAA"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvDriverRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â­ 4.8"
            android:textColor="#FFC107"
            android:textSize="14sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="16dp"
            android:layout_marginHorizontal="16dp"
            android:background="#444444" />

        <TextView
            android:id="@+id/tvTripCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="125 viajes"
            android:textColor="#AAAAAA"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>
